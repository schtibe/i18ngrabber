{
	"name": "i18ngrabber",
	"displayName": "i18ngrabber",
	"description": "Grabs a String and puts it into the translation files",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.49.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:i18ngrabber.grabtext"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "i18nGrabber",
			"properties": {
				"i18nGrabber.translationFileLocation": {
					"type": "string",
					"default": "locale/de.json",
					"description": "Path to your translation file"
				}
			}
		},
		"commands": [
			{
				"command": "i18ngrabber.grabtext",
				"title": "Grab text to be translated"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"locale-man": "node node_modules/locale-man/ -l de,en -o src/locale"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"@types/vscode": "^1.49.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"eslint": "^7.6.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"@types/jsonfile": "^6.0.0",
		"@types/lodash.set": "^4.3.6",
		"jsonfile": "^6.0.1",
		"lodash.set": "^4.3.2"
	}
}